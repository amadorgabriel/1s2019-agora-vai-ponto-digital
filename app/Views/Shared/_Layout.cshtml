        </div>

        <p class="direitos"> Todos Direitos Reservados a Empresa Agora Vai
            <br>
            Site Desenvolvido pela empresa em parceria com gabrielramador2014@gmail.com , 2019
        </p>
    </footer>

 

    @if("Erro".Equals((string) ViewData["Titulo"])){
        <script>
            alert("Usuário Não Cadastrado, Email ou senha já existentes!");   
        </script>
    }

    @if("ErroLogin".Equals((string) ViewData["ErroData"])){
            <script>
                alert("Usuário ou Senha Incompatíveis!");
            </script>
    }
    
    @if("Planos e Produtos".Equals((string) ViewData["Titulo"] )){

    <script>
        $(function () {
            var gnd = $("#plano_grande");
            var pqn = $("#plano_pequeno");
            var med = $("#area_boxs_planos");

            var botao = $("#btn_grande");
            botao.on("click", function () {

                gnd.toggleClass("active");
                pqn.toggleClass("disabled");
                med.toggleClass("disabled");
            });

            var botao = $("#btn_pequeno");
            botao.on("click", function () {
                gnd.toggleClass("disabled");
                pqn.toggleClass("active");
                med.toggleClass("disabled");
            });

            var botao = $("#btn_medio");
            botao.on("click", function () {
                gnd.toggleClass("disabled");
                pqn.toggleClass("disabled");
                med.toggleClass("active");
            });
        });
    </script>

    <script>
        function btn_grande() {
            var m = document.getElementById("plano_grande"); //id section planos
            if (m.style.display == "none") { //se for clicado no "on.click"
                m.style.display = "flex";
            } else {
                m.style.display = "none";
            }
        }

        function btn_pequeno() {
            var m = document.getElementById("plano_pequeno"); //id section planos
            if (m.style.display == "none") { //se for clicado no "on.click"
                m.style.display = "flex";
            } else {
                m.style.display = "none";
            }
        }

        function btn_medio() {
            var m = document.getElementById("area_boxs_planos"); //id section planos
            if (m.style.display == "none") { //se for clicado no "on.click"
                m.style.display = "flex";
            } else {
                m.style.display = "none";
            }
        }
    </script>
    }
    
   
    </body>

</html>