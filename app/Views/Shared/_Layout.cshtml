<!DOCTYPE html>
<html lang="pt-br">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @if( "Home".Equals((string) ViewData["Titulo"] ) ){
    <link href="css/style_Index.css" rel="stylesheet" type="text/css">
    }else if("Planos e Produtos".Equals((string) ViewData["Titulo"])){
    <link rel="stylesheet" href="~/css/style_planos.css" type="text/css">
    }else if("Historia e Sede".Equals((string) ViewData["Titulo"] ) ){
    <link rel="stylesheet" href="~/css/style_historia.css" type="text/css">
    }else if("Login ou Cadastro".Equals((string) ViewData["Titulo"] ) ){
    <link rel="stylesheet" href="~/css/style_cadastro.css" type="text/css">
    }else if("Avaliações".Equals((string) ViewData["Titulo"] )){
    <link rel="stylesheet" href="~/css/style_cadastro.css" type="text/css">
    }else if("Cadastro Bem Sucedido".Equals((string) ViewData["Titulo"] ) ){
    <link rel="stylesheet" href="~/css/style_planos.css" type="text/css">
    }else if("Erro".Equals((string) ViewData["Titulo"] )){
    <link rel="stylesheet" href="~/css/style_cadastro.css" type="text/css">
    }else if("ErroLogin".Equals((string) ViewData["ErroData"] )){
    <link rel="stylesheet" href="~/css/style_cadastro.css" type="text/css">
    }else if("Dasboard Administrador".Equals((string) ViewData["Titulo"]) ){
